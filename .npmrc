# pnpm configuration - replaces deprecated shamefully-hoist=true
# These settings are pnpm-specific and will be ignored by npm

# Essential Electron ecosystem
public-hoist-pattern[]=electron
public-hoist-pattern[]=electron-*
public-hoist-pattern[]=@electron-toolkit/*

# TypeScript and build tools
public-hoist-pattern[]=typescript
public-hoist-pattern[]=*types*
public-hoist-pattern[]=@types/*
public-hoist-pattern[]=vite
public-hoist-pattern[]=electron-vite
public-hoist-pattern[]=electron-builder

# React core (prevent duplicate instances)
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
public-hoist-pattern[]=react-router-dom

# Testing framework
public-hoist-pattern[]=vitest
public-hoist-pattern[]=@vitest/*
public-hoist-pattern[]=@testing-library/*
public-hoist-pattern[]=playwright
public-hoist-pattern[]=playwright-*

# Native module support
public-hoist-pattern[]=node-gyp
public-hoist-pattern[]=prebuild-install

# PostCSS and build chain
public-hoist-pattern[]=postcss
public-hoist-pattern[]=autoprefixer
public-hoist-pattern[]=tailwindcss

# MCP SDK dependencies (fix for ESM resolution in ASAR)
public-hoist-pattern[]=ajv
public-hoist-pattern[]=@modelcontextprotocol/*
public-hoist-pattern[]=cross-spawn
public-hoist-pattern[]=content-type
public-hoist-pattern[]=cors
public-hoist-pattern[]=eventsource
public-hoist-pattern[]=eventsource-parser
public-hoist-pattern[]=express
public-hoist-pattern[]=express-rate-limit
public-hoist-pattern[]=pkce-challenge
public-hoist-pattern[]=raw-body
public-hoist-pattern[]=zod
public-hoist-pattern[]=zod-to-json-schema

# Preserve strict dependency resolution
strict-peer-dependencies=true
auto-install-peers=true